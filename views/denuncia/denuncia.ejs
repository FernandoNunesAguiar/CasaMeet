<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Denúncias</title>
</head>
<body>
    <h1>Painel de Denúncias</h1>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% denuncias.forEach(denuncia => { %>
                <tr>
                    <td><%= denuncia.id %></td>
                    <td><%= denuncia.categoria %></td>
                    <td><a href="/denuncia/<%= denuncia.id %>">Ver detalhes</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <form action="/">
        <button type="submit">Voltar</button>
    </form>
</body>
</html>
